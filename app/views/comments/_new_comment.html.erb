<div id="myToggleDiv">
  <%=form_for @comment, :remote => true do |f| %>
    <%= f.error_messages %>

    <%= f.hidden_field :family_id %>
    <%= f.hidden_field :person_id %>
    <p>
      Comment:<br />
      <%= f.text_area :text, :cols => 40, :rows => 3 %>
      <%= f.submit 'Create', :onclick => "toggleDisplay('myToggleDiv');return true"%>
      <%= link_to 'Cancel', :remote => true, :url => {:controller => 'comments', 
                                            :action => 'familyComments', 
                                            :family_id => @comment.family } %>
    </p>
  <% end %>

</div>
