<h1>Monthly Report - Lessons and Visits</h1>
<% @event_months.each do |month, events| %>  
  <% events.sort! { |a,b| a.family.name <=> b.family.name } %>
  <b><a href ='#' class = 'subtile-links' onclick="Effect.toggle('<%= month.to_s %>-events', 'blind'); return false;">
      <%= month.strftime("%b") %></b> &#151; <%=getMonthlyTotal(events)%> Families Visited</a> 
  <ul>
  <div id='<%= month %>-events' style='display:none'>
    <%= render(:partial => "event_month", :object => events) %>
  </div>
  </ul>
<% end %> 
