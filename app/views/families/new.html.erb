<h1>New family</h1>

<% form_for(@family) do |f| %>
  <%= f.error_messages %>

  <table style="border-style:hidden">
    <tr>
      <td>
        <%= f.label :head_of_house_hold %><br />
        <%= f.text_field :head_of_house_hold %>
      </td>
      <td>
        <%= f.label "Last Name" %><br />
        <%= f.text_field :name %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :phone %><br />
        <%= f.text_field :phone %>
      </td>
      <td>
        <%= f.label :address %><br />
        <%= f.text_field :address %>
      </td>
    </tr>
  </table>
  <p>
  </p>
  <p>
    <%= f.label "Found through" %><br />
    <!-- TODO Move this into a helper... code duplication -->
    <%= f.select :status, {"Member Referral"    => "Member Referral", 
      "Part Member Family" => "Part Member Family",
      "Missionary Find"    => "Missionary Find",
      "Former Investigator" => "Former Investigator",
      "Self Referral"       => "Self Referral"}, 
      {:selected => "Member Referral"} %>
    </p>
    <p>
      <%= f.label "Family Information" %><br />
      <%= f.text_area :information, :rows=>4, :cols=>80 %>
    </p>
    <%= f.hidden_field :member, :value => 0 %>
    <%= f.submit 'Create' %>
  <% end %>

  <%= link_to 'Back', families_path %>
