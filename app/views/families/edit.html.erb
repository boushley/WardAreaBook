<h1>Editing family...</h1>

<% form_for(@family) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= @family.name%><br />
  </p>
  <p>
    <%= @family.head_of_house_hold %><br />
  </p>
  <p>
    <%= @family.phone %><br />
  </p>
  <p>
    <%= @family.address %><br />
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.select :status, {"active"         => "active", 
                           "less active"    => "less active", 
                           "moved"          => "moved", 
                           "not interested" => "not interested",
                           "dnc"            => "dnc" } %>
  </p>
  <p>
    <%= f.label :information %><br />
    <%= f.text_area :information %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>
