<h1>Editing family</h1>

<% form_for(@family) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :head_of_house_hold %><br />
    <%= f.text_field :head_of_house_hold %>
  </p>
  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.select :status, {"Active"         => "Active", 
                           "Less Active"    => "Less Active", 
                           "Moved"          => "Moved", 
                           "Moved-Recorded" => "Moved-Recorded", 
                           "Not Interested" => "Not Interested",
                           "DNC"            => "DNC" } %>
  </p>
  <p>
    <%= f.label :information %><br />
    <%= f.text_area :information %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @family %> |
<%= link_to 'Back', families_path %>
