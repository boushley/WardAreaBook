<h1>Listing families</h1>

<table class = 'sortable resizable'>
  <thead>
  <tr align="left">
    <th>Name**</th>
    <th class='nosort'>Phone</th>
    <th class='nosort'>Address</th>
  </tr>
</thead>
<tbody>

<% @families.each do |family| %>
  <tr class="<%=cycle('list-line-odd','list-line-even')%>" 
    onClick = "window.location.href='<%= family_path(family) %>'" >
    <td><%=h family.name %>, <%=h family.head_of_house_hold %></td>
    <td><%=h family.phone %></td>
    <td><%=h family.address %></td>
  </tr>
<% end %>
</tbody>
</table>
